<h1>AI Tools</h1>

<%= search_form_for @q do |f| %>
  <%= f.search_field :name_cont %>
  <%= f.submit "Search" %>
<% end %>

<% if @ai_tools.any? %>
  <% @ai_tools.each do |tool| %>
    <div>
      <h3><%= link_to tool.name, ai_tool_path(tool) %></h3>
      <p><%= truncate(tool.description, length: 100) %>...</p>
    </div>
  <% end %>
<% else %>
  <p>No AI tools found.</p>
<% end %>
