<h1>Search AI Tools</h1>

<%= form_with url: root_path, method: :get, local: true do |form| %>
  <div class="mb-3">
    <%= form.label :q, "Search by Tool Name or Features" %>
    <%= form.search_field :q, class: "form-control", placeholder: "Type here to search..." %>
  </div>
  <%= form.submit "Search", class: "btn btn-primary" %>
<% end %>

<% if @ai_tools.any? %>  <!-- Only display results if there are any -->
  <h2>Results</h2>
  <ul>
    <% @ai_tools.each do |tool| %>
      <li><strong><%= tool.name %></strong>: <%= tool.description %> (<%= tool.features %>)</li>
    <% end %>
  </ul>
<% else %>
  <% if params[:q].present? %>
    <p>No results found.</p>
  <% end %>
<% end %>
