<h1>Search AI Tools</h1>

<%= search_form_for @q, url: root_path, method: :get do |f| %>
  <div class="mb-3">
    <%= f.label :name_cont, "Search by Tool Name" %>
    <%= f.search_field :name_cont, class: "form-control" %>
  </div>
  <div class="mb-3">
    <%= f.label :features_cont, "Search by Features" %>
    <%= f.search_field :features_cont, class: "form-control" %>
  </div>
  <%= f.submit "Search", class: "btn btn-primary" %>
<% end %>

<h2>Results</h2>
<ul>
  <% @ai_tools.each do |tool| %>
    <li><strong><%= tool.name %></strong>: <%= tool.description %> (<%= tool.features %>)</li>
  <% end %>
</ul>
